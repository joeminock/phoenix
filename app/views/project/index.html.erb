<% content_for :head do %>
	<title>Find a Project, it's time to Get Started with Startbox</title>
	<meta name="description" content="WHETHER YOU'RE HANDY OR NOT, WE'VE MADE IT SUPER FUN AND EASY TO TAKE ANY PROJECT FROM START TO FINISH" />

	<!-- Twitter Card data --> 
    <meta name="twitter:card" content="summary_large_image"> 
    <meta name="twitter:site" content="@getstartbox"> 
    <meta name="twitter:creator" content="@getstartbox">
    <meta name="twitter:title" content="Find a Project, it's time to Get Started with Startbox"> 
    <meta name="twitter:description" content="">
    <!-- Twitter summary card with large image must be at least 280x150px --> 
    <meta name="twitter:image:src" content="">

    <!-- Open Graph data --> 
    <meta property="og:site_name" content="Startbox" />
    <meta property="og:type" contcontent="website" /> 
    <meta property="og:title" content="Find a Project, it's time to Get Started with Startbox" />        
