<br />
<h5>Find a Project, it's time to <i>Get Started</i></h5>
<hr>
<div class="row" data-no-turbolink>

	<% @projects.each do |project| %>
		<%= link_to project do %>
			<div class="col s12 m6 l4">
				<div class="card z-depth-2">

					<div class="card-image">
						<%= image_tag project.image %>
					</div>
						
					<div class="card-content" style="height: 8em">
						<p class="flow-text grey-text text-darken-4"><%= project.name %></p>
						
					</div>	
					
				</div>
			</div>	
		<% end %>
	<% end %>
</div>