<header>
		<!-- Dropdown Structure -->
		<ul id="dropdown1" class="dropdown-content">
		  <li><%= link_to "My Profile", edit_user_registration_path %></li>
		  <li><a href="#!">My Projects</a></li>
		  <li class="divider"></li>
		  <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
		</ul>

		<!-- Dropdown Structure -->
		<ul id="dropdown2" class="dropdown-content">
		  <li><%= link_to "My Profile", edit_user_registration_path %></li>
		  <li><a href="#!">My Projects</a></li>
		  <li class="divider"></li>
		  <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
		</ul>
	<div class="navbar-fixed">
		<nav class="teal lighten-2 z-depth-1">
			<div class="container">
			    <div class="nav-wrapper">
			      <a class="navbar-brand" href="/"><img alt="Startbox" class="header-logo" src="/assets/startbox_logo.png"></a>

			      <!--<%= link_to "Startbox", root_path, :class => "brand-logo" %>-->
			      
			      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="mdi-navigation-menu"></i></a>

			      <ul class="right hide-on-med-and-down">
			        <li><a href="#">Projects</a></li>
			        <!-- Conditional Statement for new / returning user vs logged in user -->
			        <% if (!user_signed_in?) %>
			        <li><%= link_to "Create Free Account", new_user_registration_path %></li>
			        <li><%= link_to "Login", new_user_session_path %></li>
			        <% else %>
			        <!-- Dropdown Trigger -->
				    <li><a class="dropdown-button valign-wrapper" href="#!" data-activates="dropdown1">
				    	<%= image_tag avatar_url(current_user), class: "circle responsive-img" %>&nbsp;
				    	<%= current_user.name %><i class="mdi-navigation-arrow-drop-down right"></i>
				    </a></li>
				    <% end %>
			      </ul>

			      <ul class="side-nav" id="mobile-demo">
			        <li><a href="#">Projects</a></li>
			        <% if (!user_signed_in?) %>
			        <li><%= link_to "Create Free Account", new_user_registration_path %></li>
			        <li><%= link_to "Login", new_user_session_path %></li>
			        <% else %>
			        <!-- Dropdown Trigger -->
				    <li><a class="dropdown-button valign-wrapper" href="#!" data-activates="dropdown2">
				    	<%= image_tag avatar_url(current_user), class: "circle responsive-img" %>&nbsp;
				    	<%= current_user.name %><i class="mdi-navigation-arrow-drop-down right"></i>
				    </a></li>
				    <% end %>
			      </ul>

			    </div>
	    	</div>
		</nav>
	</div>
	</header>