<br />
<h5>Log In</h5>
<hr>
<div class="row">
  <div class="col m6 offset-m3 center">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render partial: "shared/devisemes" %>

      <div class="input-field">
        <%= f.email_field :email, :id => "email", :class => "validate", :placeholder => "Email" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, :id => "email", :class => "validate", :placeholder => "Password",autocomplete: "off" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">
      Log In</button>
      <p class="line center">
      <%= link_to "I forgot my password", new_user_password_path %>
      </p>
    <% end %>

<p class="line">
  <span>OR</span>
</p>

      <%= link_to "Log in with Google", user_omniauth_authorize_path(:google_oauth2), class: "btn red darken-1" %>

    <br /><br />

    <%= link_to "Log in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn blue darken-4" %>

    

    <p class="line">
         Need an account? <a class="note" href="/sign_up">Create a Free Account</a>
    </p>

  </div>
</div>
